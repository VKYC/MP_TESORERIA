<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_payment_view_form" model="ir.ui.view">
        <field name="name">payroll.payment.view.form</field>
        <field name="model">payroll.payment</field>
        <field name="arch" type="xml">
            <form string="Pago de n贸mina">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,send,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="currency_id"/>
                            <field name="budget"/>
                        </group>
                        <group>
                            <field name='number_of_invoices'/>
                            <field name='bank_id'/>
                            <field name='amount_total'/>
                        </group>
                    </group>
                    <notebook>
                        <page name="moves" string="Detalle">
                            <field name="move_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="amount_total"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="payroll_payment_view_tree" model="ir.ui.view">
        <field name="name">payroll.payment.view.tree</field>
        <field name="model">payroll.payment</field>
        <field name="arch" type="xml">
            <tree string="Pago de n贸mina">
                <field name="name"/>
                <field name="date"/>
                <field name="currency_id"/>
                <field name='number_of_invoices'/>
                <field name='bank_id'/>
            </tree>
        </field>
    </record>
    <record id="payroll_payment_action" model="ir.actions.act_window">
        <field name="name">Pago de n贸mina</field>
        <field name="res_model">payroll.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>
    <menuitem id="payroll_payment_menu" name="Pago de n贸mina" action="payroll_payment_action" parent="account.menu_finance_payables" sequence="10"/>
</odoo>